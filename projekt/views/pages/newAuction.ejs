<!-- views/pages/login.ejs -->

<!DOCTYPE html>
<html>
    <head>
        <% include ../partials/head %>
        <!-- Custom styles for this template -->
        <link href="/css/signin.css" rel="stylesheet">
    </head>
    <body>
        <header>
            <% include ../partials/header %>
            <% include ../partials/message %>
        </header>
        <main role="main" class="container">
                <form class="form-signin" action='/newAuction' method='POST'>
                        <h1 class="h3 mb-3 font-weight-normal">Create new auction</h1>
                        <p class="form-control">
                        <input type="checkbox" name="isBuyNow" > Buy now
                        </p>
                        <p>
                        <input type="text" name="title" class="form-control" placeholder="Title" required autofocus>
                        </p>
                        <p>
                        <textarea type="text" name="description" class="form-control" placeholder="Description" required></textarea>
                        </p>
                        <p>
                        <input type="text" name="photo" class="form-control" placeholder="Photo address" required autofocus>
                        </p>
                        <p>
                        <input type="number"   step="0.5" min="0" name="price" class="form-control" placeholder="Price" required>
                        </p>
                        <p class="form-control">
                        End date
                        <input type="date" name="endDate" min="<%= moment().format('YYYY-MM-DD') %>" class="form-control" placeholder="End date" required>
                        </p>
                        <p>
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Create</button>
                        </p>
                </form>
                
                
        </main>
        <footer>
            <% include ../partials/footer %>
        </footer>
    </body>
</html>